<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Manipulasi"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listrtl"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="14dp"
        android:text="Input Barang" />

    <Button
        android:id="@+id/output"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/input"
        android:layout_below="@+id/input"
        android:layout_marginTop="20dp"
        android:text="Output Barang" />

    <Button
        android:id="@+id/hapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Hapus" />

    <Button
        android:id="@+id/listbrg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listrtl"
        android:layout_alignParentBottom="true"
        android:text="List Barang" />

    <Button
        android:id="@+id/retailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hapus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Reatiler" />

    <Button
        android:id="@+id/listrtl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/retailer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="List Reailer" />

</RelativeLayout>